<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Combined area chart for healthchecks with d3.js</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div id="root-container">
        <h3>Combined area chart for healthchecks with d3.js</h3>
        <div class="button-container">
            @* <button id="start-refresh-button" onclick="areaChart.startAutoRefresh(2000)">Start auto refresh (2000ms)</button> *@
            @* <button id="stop-refresh-button" onclick="areaChart.stopAutoRefresh()">Stop auto refresh</button> *@
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/d3/6.1.1/d3.min.js" integrity="sha512-5xkNvFVCctXwOszeifE8pzjyDFlHvHDCKIrhwmuSbCtTHqc7IhA6/1tTNYXE8WmYvwP5KFQegCS1QRR4poYgjg==" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="~/js/test-data.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        axios.get("/api/healthchecks/applications")
            .then(_ => {
                for (let application of _.data) {
                    areaChart().initialize(application.id);
                }
            });
    </script>
</body>
</html>
